<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleViewParentsActivity">

    <RelativeLayout
        android:id="@+id/menus"
        style="@style/bottom_menu_layout"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            style="@style/bottom_menu_layout">

            <Button
                android:id="@+id/btnBottomHome"
                app:iconPadding="0dp"
                style="@style/btn_bottom_menu1" />

            <Button
                android:id="@+id/btnBottomNotice"
                style="@style/btn_bottom_menu2"
                app:iconPadding="0dp"/>

            <Button
                android:id="@+id/btnBottomDailynote"
                style="@style/btn_bottom_menu3"
                app:iconPadding="0dp"/>

            <Button
                android:id="@+id/btnBottomSchoolbus"
                style="@style/btn_bottom_menu4"
                app:iconPadding="0dp"/>

            <Button
                android:id="@+id/btnBottomSetting"
                style="@style/btn_bottom_menu5"
                app:iconPadding="0dp"/>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/container_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout style="@style/top_image_layout">

            <TextView
                android:id="@+id/btnLogin"
                style="@style/top_button1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/btnRegister"
                style="@style/top_button2"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/btnTranslate"
                    style="@style/top_button3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewEn"
                        style="@style/text_input_frame_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/textEn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D9E48B"
                            android:text="English"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewCn"
                        style="@style/text_input_frame_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/textCn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D9E48B"
                            android:text="汉语"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewVi"
                        style="@style/text_input_frame_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/textVi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D9E48B"
                            android:text="Tiếng Việt"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewTh"
                        style="@style/text_input_frame_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/textTh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D9E48B"
                            android:text="ภาษาไทย"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardViewJa"
                        style="@style/text_input_frame_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:backgroundTint="@color/white"
                        android:visibility="invisible"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp">

                        <TextView
                            android:id="@+id/textJa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#D9E48B"
                            android:text="日本語"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPicnic"
                android:layout_width="38dp"
                android:layout_height="36dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/textPageTitle"
                style="@style/text_title"
                android:text="일정 보기" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#ffffff"
                android:padding="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2023.08.26"
                                android:textColor="#222222"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="놀이와 발달 강연 진행 안내"
                                    android:textColor="#222222"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textContents"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="8월 26일에는 놀이와 발달을 주제로 강연을 진행했습니다"
                            android:textColor="#222222"
                            android:textSize="12sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>