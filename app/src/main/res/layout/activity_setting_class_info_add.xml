<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingClassInfoAddActivity">


    <LinearLayout
        android:id="@+id/container_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/header"
            style="@style/top_image_layout">

            <TextView
                android:id="@+id/btnLogin"
                style="@style/top_button1" />

            <TextView
                android:id="@+id/btnRegister"
                style="@style/top_button2" />

            <ImageButton
                android:id="@+id/btnTranslate"
                style="@style/top_button3" />

        </LinearLayout>

        <TextView
            android:id="@+id/textPageTitle"
            style="@style/text_title"
            android:text="어린이집 · 반 등록" />

        <TextView
            android:id="@+id/textView38"
            style="@style/text_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="어린이집" />

        <androidx.cardview.widget.CardView
            style="@style/text_input_frame_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp">

            <EditText
                android:id="@+id/editNurseryName"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:hint="어린이집 이름을 입력하세요"
                android:inputType="text"
                android:padding="5dp"
                android:singleLine="true"
                android:textColorHint="#BBBBBB"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnNurseryCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#A9CB35"
            android:text="어린이집 등록하기" />

        <TextView
            android:id="@+id/textView39"
            style="@style/text_input_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:text="반" />

        <androidx.cardview.widget.CardView
            style="@style/text_input_frame_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="8dp">

            <EditText
                android:id="@+id/editClassName"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:hint="반 이름을 입력하세요"
                android:inputType="text"
                android:padding="5dp"
                android:singleLine="true"
                android:textColorHint="#BBBBBB"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="반이름 추가"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnClassCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#A9CB35"
            android:text="반 등록하기" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>